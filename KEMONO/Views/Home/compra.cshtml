<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/skeleton.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <header class="header">
        <div class="container">
            <div class="row">
                <div class="four columns">
                    <h1><img src="" alt="">KEMONO</h1>
                </div>
                <div class="two columns u-pull-right">
                    <ul>
                        <li class="submenu">
                            <img src="img/cart.png" alt="">
                            <div id="carrito">
                                <p class="vacio">carrito vacio</p>
                                <table id="lista-carrito" class="u-full-width">
                                    <thead>
                                        <tr>
                                            <th>Imagen</th>
                                            <th>Plan</th>
                                            <th>Precio</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                    </tbody>
                                </table>
                                <a href="#" id="vaciar-carrito"
                                class="button u-full-width">vaciar carrito</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div id="lista-platillos" class="container">
        <h1 class="encabezado">NUESTROS PLANES</h1>

        <div class="row">
            <div class="four columns">
                <div class="card">
                    <img src="img/logo.png" class="imagen-platillo u-full-width">
                    <div class="info-card">
                        <h4>INDIVIDUAL</h4>
                        <p class="precio"><span class="u-pull-right">s/10</span> </p>
                        <a href="#" class="u-full-width button-primary button input agregar-carrito" data-id="1">Agregar al carrito</a>
                    </div>
                </div>
            </div>
            <div class="four columns">
                <div class="card">
                    <img src="img/logo.png" class="imagen-platillo u-full-width">
                    <div class="info-card">
                        <h4>DUO</h4>
                        <p class="precio"><span class="u-pull-right">s/25</span> </p>
                        <a href="#" class="u-full-width button-primary button input agregar-carrito" data-id="2">Agregar al carrito</a>
                    </div>
                </div>
            </div>
            <div class="four columns">
                <div class="card">
                    <img src="img/logo.png" class="imagen-platillo u-full-width">
                    <div class="info-card">
                        <h4>FAMILIAR</h4>                  
                        <p class="precio"><span class="u-pull-right">s/35</span> </p>
                        <a href="#" class="u-full-width button-primary button input agregar-carrito" data-id="3">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        </div>

           

    <script src="js/app.js"></script>
</body>
</html>